{
   "manifest_version": 3,
   "name": "Volume Booster Without Dementia",
   "version": "1.0.0",

   "description": "Volume booster firefox extension that remembers your choices.",

   "icons": {
      "48": "assets/icon-48.png",
      "96": "assets/icon-96.png"
   },

   "action": {
      "default_popup": "options/popup.html"
   },

   "options_ui": {
      "page": "options/popup.html",
      "browser_style": false
   },



   "background": {
      "scripts": ["options/default.js", "scripts/background.js"]
   },

   "host_permissions": [
      "<all_urls>"
   ],



   "content_scripts": [
      {
         "matches": [
            "<all_urls>"
         ],
         "js": ["scripts/boost.js"],
         "run_at": "document_start"
      }
   ],

   "permissions": [
      "storage",
      "tabs"
   ],



   "browser_specific_settings": {
      "gecko": {
         "id": "VolumeBoosterWithoutDementia@zWolfrost.github.com"
      }
   }
}